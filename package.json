{
  "name": "sequelize-butler",
  "version": "2.0.3",
  "description": "Useful features to facilitate the use of Sequelize",
  "main": "index.js",
  "types": "main.d.ts",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "sequelize": "^4.42.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/lodash": "^4.14.119",
    "@types/moment": "^2.13.0",
    "@types/sequelize": "^4.27.33",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "jest": "21.x",
    "mysql2": "^1.6.4",
    "pg": "^7.7.1",
    "sqlite3": "^4.0.4",
    "tedious": "^2.7.1",
    "ts-jest": "^21.2.4",
    "tslint": "^5.12.0",
    "typescript": "^2.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-meini/sequelize-butler.git"
  },
  "keywords": [
    "Sequelize",
    "helper"
  ],
  "author": "Marco Meini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marco-meini/sequelize-helper/issues"
  },
  "homepage": "https://github.com/marco-meini/sequelize-helper#readme"
}
