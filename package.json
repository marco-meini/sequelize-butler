{
  "name": "sequelize-butler",
  "version": "2.0.2",
  "description": "Useful features to facilitate the use of Sequelize",
  "main": "index.js",
  "types": "main.d.ts",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "sequelize": "^4.22.5",
    "moment": "^2.19.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/lodash": "^4.14.85",
    "@types/moment": "^2.13.0",
    "@types/sequelize": "^4.0.79",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "jest": "21.x",
    "mysql2": "^1.4.2",
    "pg": "^7.4.0",
    "sqlite3": "^3.1.13",
    "tedious": "^2.1.1",
    "ts-jest": "21.x",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marco-meini/sequelize-butler.git"
  },
  "keywords": [
    "Sequelize",
    "helper"
  ],
  "author": "Marco Meini",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marco-meini/sequelize-helper/issues"
  },
  "homepage": "https://github.com/marco-meini/sequelize-helper#readme"
}
