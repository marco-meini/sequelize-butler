{
  "name": "ambrogio-sequelize-helper",
  "version": "2.1.0",
  "description": "Useful features to facilitate the use of Sequelize",
  "main": "index.js",
  "types": "main.d.ts",
  "scripts": {
    "build": "npm run build-ts && npm run tslint",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "sequelize": "^6.5.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/moment": "^2.13.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "jest": "^26.6.3",
    "mysql2": "^2.2.5",
    "pg": "^8.5.1",
    "sqlite3": "^5.0.2",
    "tedious": "^11.0.5",
    "ts-jest": "^26.5.3",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ambrogio-dev/sequelize-helper.git"
  },
  "keywords": [
    "Sequelize",
    "helper"
  ],
  "author": "Ambrogio S.r.l.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ambrogio-dev/sequelize-helper/issues"
  },
  "homepage": "https://github.com/ambrogio-dev/sequelize-helper#readme"
}